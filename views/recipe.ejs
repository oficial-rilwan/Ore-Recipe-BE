<!DOCTYPE html>
<html lang="en">

<%- include ('./partials/header') %>

<body>
  <header class="p-4">
    <div class="row align-items-center">
      <div class="col">
        <div>
          <%- include ('./partials/logo') %>
        </div>
      </div>
      <div class="col">
        <%- include ('./partials/search-bar', { type: "recipe"}) %>
      </div>
      <div class="col">
        <%- include ('./partials/user-menu') %>
      </div>
    </div>
  </header>
  <main>
    <%- include ('./partials/toast') %>

    <div class="container-xl">
      <div class="row">
        <div class="col-12 col-md-6">
          <img style="width: 100%; height: auto;" src="<%= recipe.imageURL %>" alt="<%= recipe.name %>">
        </div>
        <div class="col-12 col-md-6">
          <div class="fw-bold fs-2 mb-3"><%= recipe.name %></div>
          <div class="fw-bold">Ingredients:</div>
          <ul class="mb-3">
            <%for (const item of recipe.ingredients){ %>
            <li><%= item.quantity %> <%= item.name %> at <span>₦<%= item.price.toLocaleString() %></span></li>
            <%}%>
          </ul>
    
             <div class="mb-5"><span class="fw-bold">Calories:</span> <%= recipe.calories %>
        </div>
        <div>
          <span class="fw-bold">Total:</span> <span class="fw-bold primary_color fs-4"> ₦<%= recipe.price.toLocaleString() %></span>
          <button type="button" class="btn btn-sm btn-success" data-bs-toggle="popover" data-bs-title="Price in USD" data-bs-content="$<%= USD.toLocaleString() %>"><small>Click to see USD</small></button>
        </div>
      </div>

    </div>
    </div>


    <div class="container-xl py-5">
      <div class="fs-2 fw-bold mb-4">Trending Now</div>
      <div class="row">
        <%for (const item of recipes.slice(0, 6)){ %>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <a style="color: inherit; text-decoration: none;" class="d-flex gap-3" href="/recipe/<%= item._id %>">
            <img style="width: 120px; height: 100px; object-fit: cover;" src="<%= item.imageURL %>" alt="<%= item.name %>">
            <div>
              <div><small class="text-secondary"><%= item.categories.join(", ") %></small></div>
              <div><small class="text-secondary"><%= item.calories %> calories</small></div>
              <div class="fs-5 fw-bold"><%= item.name %></div>

            </div>
          </a>
        </div>
        <%}%>

      </div>
    </div>
      <div class="container-xl py-5">
        <div class="fs-2 fw-bold mb-4 text-center">Fresh Picks</div>
        <div class="row">
          <%for (const item of recipes.slice(7, 14)){ %>
        <div class="col-12 col-md-4 col-lg-3 mb-4">
          <a style="color: inherit; text-decoration: none;" class="" href="/recipe/<%= item._id %>">
            <img class="mb-3" style="width: 100%; height: 200px; object-fit: cover;" src="<%= item.imageURL %>" alt="<%= item.name %>">
            <div>
              <div class="fs-5 fw-bold"><%= item.name %></div>
              <div><small class="text-secondary"><%= item.categories.join(", ") %></small></div>
              <div><small class="text-secondary"><%= item.calories %> calories</small></div>

            </div>
          </a>
        </div>
        <%}%>

      </div>
    </div>
  </main>

</body>

</html>