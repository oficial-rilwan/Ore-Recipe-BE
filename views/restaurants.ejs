<!DOCTYPE html>
<html lang="en">

<%- include ('./partials/header') %>

<body>
  <header class="p-4">
    <div class="row align-items-center">
      <div class="col">
        <div>
          <%- include ('./partials/logo') %>
        </div>
      </div>
      <div class="col">
        <%- include ('./partials/search-bar', { type: "restaurants"}) %>
      </div>
      <div class="col">
        <%- include ('./partials/user-menu') %>
      </div>
    </div>
  </header>
  <main>
    <%- include ('./partials/toast') %>

    <%if(restaurants.length && !query){%>
    <div class="banner">
      <img style="width: 100%; height: 300px; object-fit: cover;" src="https://plus.unsplash.com/premium_photo-1661883237884-263e8de8869b?q=80&w=2089&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Main Banner">
    </div>
    <%}%>

    <div class="container-xl py-5">
    <%if(query){%>
    <div class="fs-5 mb-4">Search results for: <span class="fs-3 fw-bold"><%= query %></span></div>
    <%}%>

    <%if(!restaurants.length){%>
    <div class="py-5">
      <div class="text-center fw-bold fs-3">0 results found for your search.</div>
      <div class="fw-medium fs-6 text-center">Please try another search term</div>
    </div>
    <%}%>

    <%if(restaurants.length){%>
    <div>
      <div class="d-flex justify-content-between align-items-center">
        <div class="fs-2 fw-bold mb-4">Top Restaurants</div>
        <a href="/restaurants"></a>
      </div>
      <div class="row">
        <%for (const item of restaurants){ %>
        <div class="col-12 col-md-4 col-lg-3 mb-4">
          <a style="color: inherit; text-decoration: none;" class="" href="#">
            <img class="mb-3" style="width: 100%; height: 200px; object-fit: cover;" src="<%= item.imageURL %>" alt="<%= item.name %>">
            <div>
              <div class="fs-5 fw-bold"><%= item.name %></div>
              <div><i class="fa fa-map-marker primary_color fs-6" aria-hidden="true"></i>
                <small class="text-secondary"><%= item.location %></small>
              </div>

            </div>
          </a>
        </div>
        <%}%>
    </div>
    <%}%>





      </div>
    </div>
  </main>
</body>

</html>